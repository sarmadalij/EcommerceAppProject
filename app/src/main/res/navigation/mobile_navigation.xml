<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.sarmadali.ecommerceappproject.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_mycarts"
        android:name="com.sarmadali.ecommerceappproject.ui.mycart.MyCartsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/accountUser"
        android:name="com.sarmadali.ecommerceappproject.ui.AccountUser"
        android:label="fragment_account_user"
        tools:layout="@layout/fragment_account_user" />
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.sarmadali.ecommerceappproject.ui.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" />
